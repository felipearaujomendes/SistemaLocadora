@model Marechal_System.Models.Entrada

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">

                <div class="body">

                    <h2 class="card-inside-title" style="text-align:center">CAMPOS DE ENTRADA</h2>
                    <div class="row clearfix">
                        <div class="col-sm-12">

                            <div class="form-group">
                                <div class="form-line">
                                    <label>Código</label>
                                    @Html.EditorFor(model => model.Codigo, new { htmlAttributes = new { @class = "form-control" }, @maxlength = "100" })
                                    @Html.ValidationMessageFor(model => model.Codigo, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Nome</label>
                                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Caixa</label>
                                    @Html.EditorFor(model => model.Caixa, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Caixa, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="form-line">
                                    <label>Quantidade</label>
                                    @Html.EditorFor(model => model.Quantidade, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Quantidade, "", new { @class = "text-danger" })
                                </div>
                            </div>



                        </div>
                        <div class="col-md-offset-10 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
}


<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/inputmask")
    <script>
        $(document).ready(function () {
            $("#telefone").inputmask("mask", { "mask": "(99) 9999-99999" });
            $("#cpf").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#cep").inputmask("mask", { "mask": "99999-999" });
            $("#nascimento").inputmask("mask", { "mask": "99/99/9999" });
            $("#preco").inputmask("mask", { "mask": "999.999,99" }, { reverse: true });
            $("#valor").inputmask("mask", { "mask": "#.##9,99" }, { reverse: true });
            $("#ip").inputmask("mask", { "mask": "999.999.999.999" });
        });
    </script>
}
